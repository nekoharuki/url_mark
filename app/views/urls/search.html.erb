<h1>URL検索</h1>

<h2>タイトル  検索</h2>
<%= form_tag("/urls/search_title") do %>
  <div>
    <label for="title">タイトル検索:</label>
    <input type="text" name="title" title="タイトルを入力してください" placeholder="タイトル" required>
    <input type="submit" value="送信">
  </div>
<% end %>

<br>
<br>
<h2>ジャンル一覧</h2>
<ul>
<% @genres.each do |genre| %>
  <li><%= link_to(genre.genre, "/urls/genres/#{genre.genre}") %></li>
  <br>
<% end %>
</ul>