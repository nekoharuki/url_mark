<h1 class="mb-4">ログイン</h1>

<div class="mb-3">
  <%= link_to "Login with Google", "/auth/google_oauth2", method: :post, class: "btn btn-success" %>
</div>
<div class="mb-3">
  <%= link_to "Login with GitHub", "/auth/github", method: :post, class: "btn btn-dark" %>
</div>

<%= form_tag("/login", method: :post, class: "needs-validation") do %>
  <div class="mb-3">
    <label for="email" class="form-label">Eメール:</label>
    <input type="email" class="form-control" name="email" id="email" title="メールアドレスを入力してください" placeholder="メールアドレス" value="<%= @email %>" required>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">パスワード:</label>
    <input type="password" class="form-control" name="password" id="password" title="パスワードを入力してください" placeholder="パスワード" value="<%= @password %>" minlength="5" required>
  </div>
  <button type="submit" class="btn btn-primary">ログイン</button>
<% end %>