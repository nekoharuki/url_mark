<h1 class="mb-4">ユーザー編集</h1>

<%= form_tag("/users/#{@user.id}/update", class: "needs-validation", novalidate: true) do %>
  <div class="mb-3">
    <label for="name" class="form-label">名前:</label>
    <input type="text" name="name" id="name" class="form-control" title="名前を入力してください" placeholder="名前" value="<%= @name %>" required>
    <div class="invalid-feedback">
      名前を入力してください。
    </div>
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">メールアドレス:</label>
    <input type="email" name="email" id="email" class="form-control" title="メールアドレスを入力してください" placeholder="メールアドレス" value="<%= @email %>" required>
    <div class="invalid-feedback">
      メールアドレスを入力してください。
    </div>
  </div>

  <button type="submit" class="btn btn-primary">ユーザー編集</button>
<% end %>