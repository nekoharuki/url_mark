<h1 class="mb-4">ユーザー詳細</h1>

<div class="card">
  <div class="card-body">
    <div class="mb-3">
      <label class="form-label">名前:</label>
      <p class="form-control-plaintext"><%= @user.name %></p>
    </div>
    <div class="mb-3">
      <label class="form-label">メールアドレス:</label>
      <p class="form-control-plaintext"><%= @user.email %></p>
    </div>

    <% if @current_user.id == @user.id %>
      <div class="mb-3">
        <%= link_to("編集", "/users/#{@user.id}/edit", class: "btn btn-warning") %>
        <%= link_to("削除", "/users/#{@user.id}/destroy", data: { turbo_method: "post" }, class: "btn btn-danger") %>
        <%= link_to("パスワード変更", "/users/#{@user.id}/password_change_form", class: "btn btn-secondary") %>
      </div>
    <% end %>
  </div>
</div>